<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/textView_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_artist_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="#4F4F4F"
            android:text="Song Title Goes Here"
            android:textSize="15sp" />

    <TextView
            android:id="@+id/textView_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="#828282"
            android:text="Artist Name Goes Here"
            android:textSize="12sp" />

    <TextView
            android:id="@+id/textView_album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@id/textView_song_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textColor="#828282"
            android:text="Album Name Goes Here"
            android:textSize="12sp" />

    <TextView
            android:id="@+id/textView_song_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="#828282"
            android:text="2:57"
            android:textSize="12sp" />

    <!--        <Button-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                app:layout_constraintTop_toTopOf="parent"-->
    <!--                app:layout_constraintBottom_toBottomOf="@id/textView_album_name"-->
    <!--                app:layout_constraintRight_toRightOf="parent"-->
    <!--                android:background="@drawable/pause_song_small" />-->

    <View
            android:id="@+id/playlist_song_divider"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            app:layout_constraintTop_toBottomOf="@id/textView_album_name" />

</androidx.constraintlayout.widget.ConstraintLayout>